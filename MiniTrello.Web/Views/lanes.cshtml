    PageData["title"] = "| MiniTrello Web";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <title>| MiniTrello Web</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css">

